---
import Logo from "./Logo.svelte";
let navlink = [
  {link: "Inicio", to: "/inicio"},
  {link: "Nosotros", to: "/nosotros"},
  {link: "Servicios", to: "/servicios"},
  {link: "FAQs", to: "/faqs"},
  {link: "Contáctanos", to: "/contactanos"},
]
let socialsMedia = [
  {name: "Whatsapp", to:"https://api.whatsapp.com/message/MDB63KJSIPBKO1?autoload=1&app_absent=0", svg: '/assets/whatsapp-logo.svg'},
  {name: "Instragram", to:"https://www.instagram.com/cambioplus/", svg: '/assets/instagram-logo.svg'}
]
let actualYear = new Date().getFullYear();
---

<footer 
  aria-label="Site Footer" 
  class="bg-gray-300 text-xs"
>
    <!-- Logo -->
    <div class="flex flex-col gap-2 justify-start max-w-5xl px-4 py-10">
      <div class="flex justify-start items-center gap-2 text-green-800 md:justify-center">
        <Logo />
        <h2 class="font-extrabold">Cambio Plus</h2>
      </div>

      <!-- Acerca de Nosotros -->
      <div class="flex flex-col max-w-md text-left leading-relaxed font-extrabold mt-5 gap-6 md:text-center md:mx-auto md:mt-6">
        <h2 class="text-green-800">Acerca de Nosotros</h2>
        <p class="text-green-600">
          Haciendo tus cambios, giros y remesas Internacionales de forma sencilla, rápida y confiable.
        </p>
      </div>

      <!-- Navegacion -->
      <div class="flex flex-col justify-start items-start gap-6 mt-5 md:justify-center md:items-center">
      <h2 class="text-green-800 font-extrabold">Navegación</h2>
      <nav aria-label="Footer Nav">
        <ul class="flex flex-col flex-wrap ml-4 justify-start gap-6 md:gap-8 lg:gap-22 md:flex-row">
          {
            navlink.map(nav => (
              <li>
                <a class="font-extrabold text-green-600 transition hover:text-green-600/75" href={nav.to}>
                  {nav.link}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>

      <!-- Social Media -->
      <div class="flex flex-col justify-start items-start gap-2 mt-5 md:justify-center md:items-center">
      <h2 class="text-green-800 font-extrabold">Contáctanos</h2>
      <ul class="flex justify-center gap-6 md:gap-8 text-green-600">
        {
          socialsMedia.map(social => (
            <li>
              <a 
                href={social.to}
                rel="noreferrer"
                target="_blank"
                class="text-green-600 transition hover:text-green-600/75"
              >
                <span class="sr-only">{social.name}</span>
                <img 
                  class="h-6 w-6 object-contain text-green-600 transition hover:text-green-600/75"
                  src={social.svg} alt={social.name}
                >
              </a>
            </li>
          ))
        }        
      </ul>
      </div>
    </div>    
    <div class="w-full h-auto p-4 flex flex-wrap justify-center items-center gap-3 bg-slate-900/90 text-white">
      <p class="sm:px-6 lg:px-8">Copyright © {actualYear} Cambio Plus</p>
      <p class="sm:px-6 lg:px-8">Todos los derechos reservados.</p>
    </div>
  </footer>